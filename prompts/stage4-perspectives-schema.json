{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stage 4: Coverage Angles",
  "type": "object",
  "required": ["coverage_angles"],
  "properties": {
    "coverage_angles": {
      "type": "array",
      "description": "Different angles or approaches in coverage. Can be empty array if sources cover story similarly. Maximum 3 angles.",
      "maxItems": 3,
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["angle", "group1", "group1_sources", "group2", "group2_sources"],
        "properties": {
          "angle": {
            "type": "string",
            "description": "What differs between sources. Examples: 'Main Focus', 'Tone', 'Context Level'. Maximum 5 words."
          },
          "group1": {
            "type": "string",
            "description": "First approach/focus. Maximum 15 words."
          },
          "group1_sources": {
            "type": "array",
            "description": "Sources using first approach",
            "items": {"type": "string"},
            "minItems": 1
          },
          "group2": {
            "type": "string",
            "description": "Second approach/focus. Maximum 15 words."
          },
          "group2_sources": {
            "type": "array",
            "description": "Sources using second approach",
            "items": {"type": "string"},
            "minItems": 1
          }
        }
      }
    }
  }
}
