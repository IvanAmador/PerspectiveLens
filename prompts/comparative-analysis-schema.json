{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Comparative News Analysis",
  "description": "Minimalist schema for comparative analysis of news summaries optimized for lightweight LLMs",
  "type": "object",
  "required": ["consensus", "key_differences", "summary"],
  "properties": {
    "consensus": {
      "type": "array",
      "description": "Facts that 70% or more sources agree upon",
      "items": {
        "type": "object",
        "required": ["fact", "sources"],
        "properties": {
          "fact": {
            "type": "string",
            "description": "The agreed-upon fact (concise, 1-2 sentences max)"
          },
          "sources": {
            "type": "array",
            "description": "Source names confirming this fact",
            "items": { "type": "string" }
          },
          "confidence": {
            "type": "string",
            "description": "Confidence level: high, medium, or low"
          }
        }
      }
    },
    "key_differences": {
      "type": "array",
      "description": "Significant differences between sources that change reader perception",
      "items": {
        "type": "object",
        "required": ["aspect", "pattern", "impact"],
        "properties": {
          "aspect": {
            "type": "string",
            "description": "What differs between sources"
          },
          "pattern": {
            "type": "string",
            "description": "Type of difference: tone, framing, or coverage"
          },
          "emphasizing": {
            "type": "array",
            "description": "Sources that highlight this aspect",
            "items": { "type": "string" }
          },
          "minimizing": {
            "type": "array",
            "description": "Sources that downplay this aspect",
            "items": { "type": "string" }
          },
          "neutral": {
            "type": "array",
            "description": "Sources with balanced treatment",
            "items": { "type": "string" }
          },
          "absent": {
            "type": "array",
            "description": "Sources that omit this aspect",
            "items": { "type": "string" }
          },
          "impact": {
            "type": "string",
            "description": "How this difference changes reader perception"
          },
          "significance": {
            "type": "string",
            "description": "Significance level: high, medium, or low"
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "description": "Brief overview of the story and analysis (2-3 sentences max)"
    }
  }
}
